{
  "compilerOptions": {
    // nullish coalescing operator not supported in OverlayPlugin's Chrome M75
    // TODO: change to ES2020 once OverlayPlugin rolls CEF past M80.
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    //    "noPropertyAccessFromIndexSignature": false, // used by trigger output strings
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./types", "./src"],
  "exclude": ["./dist"]
}
